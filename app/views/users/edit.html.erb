<%= render 'books/header' %>

<% if @user.errors.any? %>
  <div class="alert alert-warning">
  	<%= @user.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h1>User info</h1>
<%=form_for(@user) do |f| %>
	<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group has-icon"><br>
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
    </div><br>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %><br>
   </div>

  <%= f.submit "Update User" %>

  <% end %>


<footer>
  <div class="container">
  	<div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>